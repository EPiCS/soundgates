<synthesizer>

    <alsa>
        <buffersize>16384</buffersize>
        <chunks>1024</chunks>
        <devicename>plughw:1,0</devicename>
    </alsa>
    
    <core>
        <hwt_support>true</hwt_support>
        <ports>
            <tcp>50050</tcp>
            <udp>50050</udp>
        </ports>
    </core>
    
    <plugins>
        <searchdir>../SoundComponents/result</searchdir>
    </plugins>
    
    <logging>
    	<initDelay>1000</initDelay>
    	<stopAfter>1000</stopAfter>
    	<enabled>true</enabled>
    	<address>192.168.1.101</address>
    	<port>27017</port>
    </logging>
    
</synthesizer>