<synthesizer>

    <alsa>
        <buffersize>16384</buffersize>
        <chunks>1024</chunks>
        <devicename>plughw:1,0</devicename>
        <devicename_in>plughw:1,0</devicename_in>
    </alsa>
    
    <core>
        <hwt_support>true</hwt_support>
        <ports>
            <tcp>50050</tcp>
            <udp>50050</udp>
        </ports>
    </core>
    
    <plugins>
        <searchdir>../SoundComponents/result</searchdir>
    </plugins>
    
</synthesizer>